  {%- if settings.social_twitter_link != blank -%}
    <li class="list-social__item">
      <a href="{{ settings.social_twitter_link }}" class="link list-social__link" target="_blank">
        {%- comment -%}{%- render 'icon-twitter' -%}{%- endcomment -%}
        <span class="visually-hidden">{{ 'general.social.links.twitter' | t }}</span>
        <svg
          xmlns="http://www.w3.org/2000/svg"
          height="1em"
          aria-hidden="true"
          focusable="false"
          class="icon icon-twitter"
          viewBox="0 0 512 512"
        >
          <style>svg{fill:#000000}</style><path d="M389.2 48h70.6L305.6 224.2 487 464H345L233.7 318.6 106.5 464H35.8L200.7 275.5 26.8 48H172.4L272.9 180.9 389.2 48zM364.4 421.8h39.1L151.1 88h-42L364.4 421.8z"/>
        </svg>
      </a>
    </li>
  {%- endif -%}
  {%- if settings.social_pinterest_link != blank -%}
